#body-home
  #section-hero
    padding 4.5em 0 3.5em

    h1
      line-height 1.2em

    .text
      margin 0 0 3em

  #section-intro
    background hsl(mhue,msat - 40%,mlit - 5%)
    color lighten(lcolor, 45%)
    border-bottom none

    .divider
      width: 100%
      border-bottom 2px solid hsl(mhue,msat - 40%,mlit + 10%)

    p
      font-size 1.2em
      text-shadow #000 0 1px 0
      color lighten(lcolor,60%)

  #section-architecture
    text-align center

    .anchor-img
      display inline-block

  #section-resources
    display block

    .content
      ul
        list-style none
        padding 0
        margin 0

  #section-video
    iframe
      display block
      width 100vw
      height (100/16*9)vw
