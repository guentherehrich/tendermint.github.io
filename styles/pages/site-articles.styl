.site-articles
  ul.categories
    clearfix()
    margin 0
    li
      display block
      float left
      margin-right 0.33em
      a
        display block
        color light
        background hsl(mhue,msat,90%)
        padding 0 0.5em
        line-height 2em
        font-size 0.75em
        font-weight bold

.body-articles
  #section-posts
    article
      margin 0 0 1.5em

      .date
        font-size 0.75em
        color dim
        margin 0
      h2
        line-height 1.25em
        margin 0 0 0.125em
        text-align left

      p
        margin 0 0 0.5em

      .date
        display inline-block
        color dim
        background hsl(0,0,95%)
        line-height x*1.5
        padding 0 0.3em

.body-article
  #section-hero, #section-post
    background none
    .container
      max-width 60em
      &#article-prev-next
        max-width 1280px

  #section-hero
    padding 2*x + 48px 0 1.5*x
    border-bottom 1px solid bc

    h1
      font-size 2em
      color txt
      text-shadow none
      line-height 1
      color mcolor
      margin 0 0 x*0.5
      font-weight normal

    p
      font-size 1em
      margin 0 0 0.5em
      color dim

    ul.categories
      li
        margin-bottom 0
