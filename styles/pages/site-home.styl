#body-home

  #section-hero
    padding 4.5em 0 3.5em

    h1
      line-height 1.2em

    .text
      margin 0 0 3em

  #section-intro
    background hsl(mhue,msat - 40%,mlit - 5%)
    color lighten(lcolor, 35%)

    h2
      text-align left
      color lighten(lcolor, 60%)
      margin 1em 0 0.5em 0
      width auto

    hr
      border-bottom 2px solid hsl(mhue,msat - 40%,mlit + 10%)

    p.first
      font-size 1.2em
      text-shadow #000 0 1px 0
      border-bottom 2px solid hsl(mhue,msat - 40%,mlit + 10%)
      margin 0 0 1em
      padding 0 0 1em
      color lighten(lcolor,60%)

  #section-resources
    display block

    h2
      text-align center

  #section-about
    h2
      text-align center
      margin-bottom: 10px
    p
      font-size: 1.8em

    .container
      padding 0

  ul#ul-team
    clearfix()
    margin -10px 0 0
    padding 5px
    li
      float left
      margin 0
      width 50%
      padding 5px
      margin 0 0 11px

    img
      width 100%

    span
      display block

    span.name
      font-weight bold

    span.title
      line-height 1.25em
      font-size 0.9em
      color dim

