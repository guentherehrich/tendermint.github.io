sans = "San Francisco Sans", 'Helvetica Neue', Arial, Helvetica, sans-serif

x = 16px

txt = #333
dim = hsl(mhue,20%,35%)
light = hsl(mhue,60%,50%)

html
  -webkit-text-size-adjust 100%

body, input, button
  font-size x
  line-height 1.5
  font-family sans

strong
  font-weight bold

em
  font-style italic

a
  text-decoration none
  color lcolor

.container a:hover
  text-decoration underline

p, ul, ol
  margin 0 0 1.5em

li
  margin 0 0 0.5em

h1, h2, h3, h4, h5, h6
  margin 0
  padding 0
  font-weight normal

h1
  font-size 3em
  font-weight 200

h2
  font-size 1.25em
  color mcolor

h3
  font-weight bold

h4
  font-weight 500

code
  font-family Consolas, 'Deja Vu Sans Mono', 'Andale Sans Mono', monospace
  line-height 1.25em
  margin 0 0 1.5em

p code
  background-color #F0F0F0
  padding 0
  padding-top 0.2em
  padding-bottom 0.2em
  margin 0
  font-size 85%
  border-radius 3px

p code:before, p code:after
  letter-spacing -0.2em
  content "\00a0"
