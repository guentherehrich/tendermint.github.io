/*----------------------------------------------------------------------
Typography
----------------------------------------------------------------------*/
/*----------------------------------------------------------------------
Site Header
----------------------------------------------------------------------*/

#site-footer
  font-size x
  line-height x*3

#site-header
  ul
    width 120px * 1.3

#github-forkme
  top: x*3 + 3px
  width: 140px

/*----------------------------------------------------------------------
Sections
----------------------------------------------------------------------*/

section
  .container
    padding 0 1em

.article-prev-next
  margin 0 0 1em
  .arrow
    line-height 4.5*x + 1.5*0.125*x
  .title
    font-size 1.125em

/*----------------------------------------------------------------------
Body
----------------------------------------------------------------------*/

#body-home
#body-about
  #section-hero
    h1
      font-size 4em
    p
      font-size 1.75em

/*----------------------------------------------------------------------
Body - Home
----------------------------------------------------------------------*/

#body-home
  #section-hero
    input, button
      margin-bottom 0.9em

/*----------------------------------------------------------------------
Body - About
----------------------------------------------------------------------*/

#body-about
  ul#ul-team
    margin -1em 0 0
    padding .5em
    li
      padding .5em
      margin 0 0 1em

/*----------------------------------------------------------------------
Body - Blog
----------------------------------------------------------------------*/

.site-articles
  #section-hero
    h1
      font-size 2em * 1.3
    p
      font-size 1em * 1.3
    ul.categories li a
      font-size 0.75em * 1.3
