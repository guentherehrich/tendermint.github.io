#article-prev-next
  margin-top 1.5em

a.article-prev-next
  display block
  border 1px solid mborder
  margin 0 0 10px
  display table
  width 100%

  .arrow
    display table-cell
    vertical-align top
    width x*2
    text-align center
    font-size x*2
    border-right 1px solid mborder
    margin-right x*1
    vertical-align middle

  .text
    padding 0.75em
    display table-cell
    vertical-align top

  .label
    color dim

  .title
    font-weight bold
    margin-right 1em
  &:hover
    text-decoration none
    .arrow
      background mborder

#article-next
  .arrow
    border-left 1px solid mborder
    border-right none
    margin-right 0
    margin-left x*1
