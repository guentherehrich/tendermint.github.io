/*----------------------------------------------------------------------
Header & Footer
----------------------------------------------------------------------*/

logo-size = 60px

.site-logo
  margin-left -0.75 * logo-size
  width logo-size * 1.5
  height logo-size * 1.5 + 4px
  transition .15s ease-in-out
  img
    margin logo-size * 0.25
    width logo-size
    height logo-size
  &:hover
    height logo-size * 1.75 + 4px

#site-header
  .left, .right
    float right
  .site-logo
    position static
    float left
    margin-top -2px
    margin-left 3em
    &:hover
      padding-top logo-size * 0.25

#site-footer
  .site-logo
    position static
    float left
    margin-left 3em
    margin-top -3 * x + 2px
    &:hover
      padding-bottom logo-size * 0.5
      margin-top -3 * x + 2px - logo-size * 0.25

/*----------------------------------------------------------------------
Sections & Containers
----------------------------------------------------------------------*/

section
  padding 3em 0
  h2
    margin-bottom x*3
    font-size 2em

  .container
    width 100%
    max-width 1280px

.section-dark
  form
    width 320px
    padding 1.5em 1.5em 0.5em
    background hsl(mhue,msat,25%)
    border-bottom 4px solid hsl(mhue,msat,15%)
    input, button
      width 100%
      font-size 1.25em

a.article-prev-next
  width 49%
  float left

#article-prev
  margin-right 2%

/*----------------------------------------------------------------------
Body - Home
----------------------------------------------------------------------*/
#body-home
  #section-hero
    text-align left
    padding 6em 0 3em
    clearfix()
    .container
      padding 0 3em

    .text
      float left
      width 50%
    h1
      font-size 5em
    p
      font-size 3em
      font-weight 500
      display inline
      line-height 1.125em

    form
      margin-top 2em
      margin-right 4em
      float right

  #section-intro
    .container
      padding 0 3em
    p
      font-size 1.5em
      max-width 1024px
      margin-bottom 0
      &.first
        font-size 1.75em
        font-weight 500

  ul#ul-team
    li
      width 25%

  #section-resources
    clearfix()

    .container
      padding-right 0

    .thirds
      width 33.33333%
      float left
      padding-right 1.5em

/*----------------------------------------------------------------------
Body - Blog
----------------------------------------------------------------------*/

#body-blog-post
  #section-hero
    padding-top 5em
    padding-bottom 3em
